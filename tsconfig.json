{
	"compilerOptions": {
		"target": "ES2020",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"isolatedModules": true,
		"outDir": "dist"
	},
	"include": ["src"]
}
